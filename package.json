{
  "name": "node-starter",
  "version": "0.1.0",
  "description": "A scaffolding CLI for generating projects from preferred stack configurations",
  "type": "module",
  "bin": {
    "node-starter": "./dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --external giget --external ejs",
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts"
  },
  "keywords": [
    "cli",
    "scaffolding",
    "project-generator",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "citty": "^0.1.6",
    "consola": "^3.2.3",
    "ejs": "^3.1.10",
    "giget": "^1.2.3"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "@types/ejs": "^3.1.5",
    "typescript": "^5.7.2"
  }
}
